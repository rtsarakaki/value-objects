{
	"compilerOptions": {
		"declaration": true,
		"target": "ES2022",
		"module": "CommonJS",
		"outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "noEmitOnError": true,
		"strict": true,
		"esModuleInterop": true,
    "skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"noUnusedLocals": false,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"resolveJsonModule": true
	},
	"include": ["./src"],
	"exclude": ["value-objects/node_modules", "**/*.test.ts"]
}